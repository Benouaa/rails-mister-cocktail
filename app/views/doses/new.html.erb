<div class="container">
  <h1>Add a dose to <%= @cocktail.name %></h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>

    <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false, collection: Ingredient.order('name ASC') %>
    <%= f.input :description %>
    <%= f.button :submit %>
  <% end %>

  <div class="back-to-list">
    <%= link_to "Back to list", cocktails_path %>
  </div>
</div>
