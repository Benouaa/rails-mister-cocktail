<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="images/logo.png" alt="logo">
  </a>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Edit this Cocktail", edit_cocktail_path(@cocktail), class: 'btn btn-primary' %>
  </div>
</div>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th align="center">Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.description %></td>
            <td><%= dose.ingredient.name %></td>
            <td>
            <%= link_to "Delete - ", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
             <i class="fa fa-trash destroy_dose">
            <%= link_to "Editer les doses", new_cocktail_dose_path(@cocktail) %>
             </i>
          <% end %>
          </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="card">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400 %>
    </div>
  </div>

<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to List", cocktails_path %></p>
<p><%= link_to "Delete ce cocktail", cocktail_path, method: :delete, data: { confirm: "Are you sure?" } %>
  <i class="fa fa-trash destroy_dose"></i></p>
</div>
